@model BirdSing.Models.AlumnoTutor

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Editar Asignación Alumno–Tutor";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ActualizarAlumnoTutor" method="post" class="mt-4 needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <!-- claves compuestas antiguas -->
    <input asp-for="MatriculaAlumno" type="hidden" />
    <input asp-for="IdTutor" type="hidden" />

    <div class="mb-3">
        <label asp-for="MatriculaAlumno" class="form-label">Alumno</label>
        <select asp-for="MatriculaAlumno"
                asp-items="ViewBag.Alumnos"
                class="form-select js-searchable">
        </select>
        <span asp-validation-for="MatriculaAlumno" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdTutor" class="form-label">Tutor</label>
        <select asp-for="IdTutor"
                asp-items="ViewBag.Tutores"
                class="form-select js-searchable">
        </select>
        <span asp-validation-for="IdTutor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Parentesco" class="form-label">Parentesco</label>
        <input asp-for="Parentesco" class="form-control" />
        <span asp-validation-for="Parentesco" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="ListaAlumnosTutores" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

