@model IEnumerable<BirdSing.Models.AlumnoTutor>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Lista de Alumnos–Tutores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="RegistroAlumnoTutor" class="btn btn-success">+ Asignar Tutor</a>
</p>

<table class="table table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Alumno</th>
            <th>Tutor</th>
            <th>Parentesco</th>
            <th style="width:160px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var at in Model)
        {
            <tr>
                <td>@at.Alumno.NombreAlumno @at.Alumno.ApellidoPaterno</td>
                <td>@at.Tutor.Usuario?.NombreUsuario</td>
                <td>@at.Parentesco</td>
                <td>
                    <a asp-action="ActualizarAlumnoTutor"
                       asp-route-matriculaAlumno="@at.MatriculaAlumno"
                       asp-route-idTutor="@at.IdTutor"
                       class="btn btn-sm btn-primary">
                        Editar
                    </a>
                    <a asp-action="EliminarAlumnoTutor"
                       asp-route-matriculaAlumno="@at.MatriculaAlumno"
                       asp-route-idTutor="@at.IdTutor"
                       class="btn btn-sm btn-danger ms-1"
                       onclick="return confirm('¿Eliminar esta asignación?');">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
