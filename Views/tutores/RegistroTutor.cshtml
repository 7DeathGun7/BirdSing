@model BirdSing.Models.ModelosViews.UsuarioTutorViewModel

@{
    Layout = "_LayoutAdmin";
}

<h2>Registrar Tutor</h2>

<form asp-action="RegistroTutor" method="post">
    <h3>Datos del Usuario</h3>
    <div>
        <label asp-for="Usuario.NombreUsuario"></label>
        <input asp-for="Usuario.NombreUsuario" />
        <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Usuario.ApellidoPaterno"></label>
        <input asp-for="Usuario.ApellidoPaterno" />
        <span asp-validation-for="Usuario.ApellidoPaterno" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Usuario.ApellidoMaterno"></label>
        <input asp-for="Usuario.ApellidoMaterno" />
        <span asp-validation-for="Usuario.ApellidoMaterno" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Usuario.Email"></label>
        <input asp-for="Usuario.Email" />
        <span asp-validation-for="Usuario.Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Usuario.Password"></label>
        <input asp-for="Usuario.Password" type="password" />
        <span asp-validation-for="Usuario.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Usuario.IdRol">Rol</label>
        <select asp-for="Usuario.IdRol" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>
    <h3>Datos del Tutor</h3>
    <div class="mb-3">
        <label asp-for="Tutor.Telefono" class="form-label"></label>
        <input asp-for="Tutor.Telefono"
               class="form-control"
               type="tel"
               maxlength="10"
               pattern="\d{10}"
               title="Sólo 10 dígitos numéricos" />
        <span asp-validation-for="Tutor.Telefono" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Tutor.Direccion" class="form-label"></label>
        <input asp-for="Tutor.Direccion" class="form-control" />
        <span asp-validation-for="Tutor.Direccion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}