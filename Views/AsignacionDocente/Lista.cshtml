@model IEnumerable<BirdSing.Models.AsignacionDocente>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Asignaciones de Docentes";
}

<link rel="stylesheet" href="~/css/listaAD.css" />


<h2>@ViewData["Title"]</h2>

<table class="tabla-asignaciones">

    <thead>
        <tr>
            <th>Docente</th>
            <th>Materia</th>
            <th>Grupo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Docente.Usuario.NombreUsuario</td>
                <td>@item.Materia.NombreMateria</td>
                <td>@item.Grupo.Grupos</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <form asp-action="Eliminar" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro que deseas eliminar esta asignación?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="contenedor-boton-registrar">
    <a asp-action="Registro" class="btn-success">+ Nueva Asignación</a>
</div>
