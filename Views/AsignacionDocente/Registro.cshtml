@model BirdSing.Models.AsignacionDocente
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Asignar Docente";
}

<h2>Asignar Docente a Materia y Grupo</h2>

<form asp-action="Registro" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="IdDocente" class="form-label">Docente</label>
        <select asp-for="IdDocente" asp-items="ViewBag.Docentes" class="form-select"></select>
        <span asp-validation-for="IdDocente" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdMateria" class="form-label">Materia</label>
        <select asp-for="IdMateria" asp-items="ViewBag.Materias" class="form-select"></select>
        <span asp-validation-for="IdMateria" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdGrupo" class="form-label">Grupo</label>
        <select asp-for="IdGrupo" asp-items="ViewBag.Grupos" class="form-select"></select>
        <span asp-validation-for="IdGrupo" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Lista" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
