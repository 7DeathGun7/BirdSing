@model BirdSing.Models.ModelosViews.GradoGrupoViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Actualizar Grupo";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ActualizarGrupo.css" />
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ActualizarGrupo" method="post" class="mt-4 needs-validation" novalidate>
    @Html.AntiForgeryToken()
    @* Sólo mostramos el summary si realmente hay errores *@
        @if (!ViewData.ModelState.IsValid)
         {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
       }

    <!-- Campo oculto para el Id de la entidad -->
    <input asp-for="IdGrupo" type="hidden" />

    <div class="mb-3">
        <label asp-for="IdGrado" class="form-label"></label>
        <select asp-for="IdGrado" asp-items="ViewBag.Grados" class="form-select"></select>
        <span asp-validation-for="IdGrado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NombreGrupo" class="form-label"></label>
        <input asp-for="NombreGrupo" class="form-control" />
        <span asp-validation-for="NombreGrupo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="ListaGrupos" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
