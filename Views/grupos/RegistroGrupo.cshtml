@model BirdSing.Models.ModelosViews.GradoGrupoViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Registrar Grupo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="RegistroGrupo" method="post" class="mt-4 needs-validation" novalidate>
    @Html.AntiForgeryToken()
    @* Solo renderizamos el cuadro de errores si hay alguno *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }

    <div class="mb-3">
        <label asp-for="IdGrado" class="form-label"></label>
        <select asp-for="IdGrado" asp-items="ViewBag.Grados" class="form-select"></select>
        <span asp-validation-for="IdGrado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NombreGrupo" class="form-label"></label>
        <input asp-for="NombreGrupo" class="form-control" />
        <span asp-validation-for="NombreGrupo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Registrar</button>
    <a asp-action="ListaGrupos" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
