@model IEnumerable<BirdSing.Models.Alumno>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Lista de Alumnos";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped mt-4">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Grado</th>
            <th>Grupo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alumno in Model)
        {
            <tr>
                <td>@alumno.NombreAlumno</td>
                <td>@alumno.ApellidoPaterno</td>
                <td>@alumno.ApellidoMaterno</td>
                <td>@alumno.Grado?.Grados</td>
                <td>@alumno.Grupo?.Grupos</td>
                <td>
                    <a asp-action="ActualizarAlumno" asp-route-id="@alumno.MatriculaAlumno" class="btn btn-sm btn-primary">
                        Actualizar
                    </a>
                    <a asp-action="EliminarAlumno" asp-route-id="@alumno.MatriculaAlumno"
                       class="btn btn-sm btn-danger ms-1"
                       onclick="return confirm('¿Estás seguro de que deseas eliminar este alumno?');">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="mt-3">
    <a asp-action="RegistroAlumno" class="btn btn-success">Registrar Nuevo Alumno</a>
</p>
