@model BirdSing.Models.ViewModels.MisAvisosTutorViewModel
@{
    Layout = "_LayoutTutor";
    ViewData["Title"] = "Mis Avisos";
}

<h2>Mis Avisos</h2>

<form class="row g-3 mb-4">
    <div class="col-md-3">
        <label>Alumno</label>
        <select asp-for="AlumnoId" asp-items="Model.Alumnos" class="form-select"></select>
    </div>
    <div class="col-md-2">
        <label>Leído</label>
        <select asp-for="Leido" asp-items="Model.Estados" class="form-select"></select>
    </div>
    <div class="col-md-2">
        <label>Desde</label>
        <input asp-for="FechaDesde" type="date" class="form-control" />
    </div>
    <div class="col-md-2">
        <label>Hasta</label>
        <input asp-for="FechaHasta" type="date" class="form-control" />
    </div>
    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary">Filtrar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Alumno</th>
            <th>Título</th>
            <th>Mensaje</th>
            <th>Leído</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Avisos)
        {
            <tr>
                <td>@a.Fecha.ToString("g")</td>
                <td>
                    @{
                        var nombre = a.Alumno?.Usuario != null
                        ? $"{a.Alumno.Usuario.NombreUsuario} {a.Alumno.Usuario.ApellidoPaterno}"
                        : $"{a.Alumno?.NombreAlumno} {a.Alumno?.ApellidoPaterno}";
                    }
                    @nombre
                </td>
                <td>@a.Titulo</td>
                <td>@a.Mensaje</td>
                <td>
                    @if (a.Leido)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">No</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
