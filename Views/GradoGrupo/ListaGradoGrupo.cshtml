@model List<BirdSing.Models.Grado>
@{
    ViewData["Title"] = "Lista de Grados y Grupos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Grados y Grupos</h2>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Grado</th>
            <th>Grupos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grado in Model)
        {
            <tr>
                <td>@grado.Grados</td>
                <td>
                    <ul class="mb-0">
                        @foreach (var grupo in grado.Grupos)
                        {
                            <li>@grupo.Grupos</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="EditarGradoGrupo" asp-route-id="@grado.IdGrado" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="EliminarGrado" asp-route-id="@grado.IdGrado" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
