<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Administrador</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
        }

        .container {
            display: flex;
            width: 100%;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #333;
            color: white;
            padding: 20px;
            transition: width 0.3s;
        }

            .sidebar h2 {
                text-align: center;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

            .sidebar li {
                margin: 10px 0;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #555;
                }

        .dropdown-content {
            display: none;
            padding-left: 20px;
        }

            .dropdown-content a {
                padding: 5px 0;
                color: white;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #555;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .logout {
            color: red !important;
        }

        .content {
            flex: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <h2>Menú</h2>
            <ul>
                <li><a asp-controller="PanelAdmin" asp-action="Index">Inicio</a></li>
                <!-- Sección de Tutores -->
                <li class="dropdown">
                    <a href="#">Tutores</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Tutores" asp-action="ListaTutores">Lista de Tutores</a></li>
                        <li><a asp-controller="Tutores" asp-action="RegistroTutor">Registrar Tutor</a></li>
                    </ul>
                </li>
                <!-- Sección de Docentes -->
                <li class="dropdown">
                    <a href="#">Docentes</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Docentes" asp-action="ListaDocentes">Lista de Docentes</a></li>
                        <li><a asp-controller="Docentes" asp-action="RegistroDocente">Registrar Docente</a></li>
                    </ul>
                </li>
                <!-- Sección de Grados -->
                <li class="dropdown">
                    <a href="#">Grados</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Grados" asp-action="ListaGrados">Lista de Grados</a></li>
                        <li><a asp-controller="Grados" asp-action="RegistroGrado">Registrar Grado</a></li>
                    </ul>
                </li>
                <!-- Sección de Grupos -->
                <li class="dropdown">
                    <a href="#">Grupos</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Grupos" asp-action="ListaGrupos">Lista de Grupos</a></li>
                        <li><a asp-controller="Grupos" asp-action="RegistroGrupo">Registrar Grupo</a></li>
                    </ul>
                </li>
                <!-- Sección de Materias -->
                <li class="dropdown">
                    <a href="#">Materias</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Materias" asp-action="ListaMaterias">Lista de Materias</a></li>
                        <li><a asp-controller="Materias" asp-action="RegistroMateria">Registrar Materia</a></li>
                    </ul>
                </li>
                <!-- Sección de Materias Docentes -->
                <li class="dropdown">
                    <a href="#">Materias Docentes</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="MateriasDocentes" asp-action="ListaMateriasDocentes">Lista de Materias Docentes</a></li>
                        <li><a asp-controller="MateriasDocentes" asp-action="RegistroMateriaDocente">Registrar Materia Docente</a></li>
                    </ul>
                </li>
                <!-- Sección de Alumnos -->
                <li class="dropdown">
                    <a href="#">Alumnos</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Alumnos" asp-action="ListaAlumnos">Lista de Alumnos</a></li>
                        <li><a asp-controller="Alumnos" asp-action="RegistroAlumno">Registrar Alumno</a></li>
                    </ul>
                </li>
                <!-- Sección de Alumnos Tutores -->
                <li class="dropdown">
                    <a href="#">Alumnos Tutores</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="AlumnosTutores" asp-action="ListaAlumnosTutores">Lista de Alumnos Tutores</a></li>
                        <li><a asp-controller="AlumnosTutores" asp-action="RegistroAlumnoTutor">Registrar Alumno Tutor</a></li>
                    </ul>
                </li>
                <!-- Cerrar sesión -->
                <li><a asp-controller="Account" asp-action="Logout" class="logout">Cerrar sesión</a></li>
            </ul>
        </aside>

        <main class="content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>