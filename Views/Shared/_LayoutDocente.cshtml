<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel Docente</title>

    @section Styles {
        <link rel="stylesheet" href="~/css/LayoutDocente.css" />
    }

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
        }

        .container {
            display: flex;
            width: 100%;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #333;
            color: white;
            padding: 20px;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 1rem;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

            .sidebar li {
                margin: 0.5rem 0;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 0.5rem;
                border-radius: 4px;
            }

                .sidebar a:hover {
                    background-color: #555;
                }

        .logout {
            color: #ff6b6b !important;
        }

        .content {
            flex: 1;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="container">

        <aside class="sidebar">
            <h2>Menú Docente</h2>
            <ul>
                <li>                    
                              <a asp-controller="PanelDocente" asp-action="CrearAvisos">Crear Aviso</a>
                </li>
                <li>
                       <a asp-controller="PanelDocente" asp-action="MisAvisos">Mis Avisos</a>
                </li>
                <li>
                    <a asp-controller="PanelDocente" asp-action="MisAlumnos">Mis Alumnos</a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="Logout" class="logout">Cerrar sesión</a>
                </li>
            </ul>
        </aside>

        <button class="menu-toggle2" onclick="toggleSidebar()">☰</button>

        <!-- Contenido principal -->
        <main class="content">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/JavaADMIN.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

