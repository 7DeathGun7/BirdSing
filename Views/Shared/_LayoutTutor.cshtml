@* /Views/Shared/_LayoutTutor.cshtml *@
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Panel Tutor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/LayoutTutor.css" />

</head>

<body>
    <div class="container-fluid">

        <button class="toggle-nav-btn d-md-none" onclick="toggleSidebar()">
            <i class="bi bi-list"></i> Menú
        </button>

        <div class="row vh-100">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse show">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="Index">
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="MisAvisos">
                                Mis Avisos
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="InformacionTutor">
                                Mi Perfil
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="Cooperativa">
                                Cooperativa
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                    Cerrar sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

<script>
    function toggleSidebar() {
        document.querySelector('.sidebar').classList.toggle('show');
    }
</script>


</html>
