@* /Views/Shared/_LayoutTutor.cshtml *@
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Panel Tutor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    @section Styles {
        <link rel="stylesheet" href="~/css/LayoutDocente.css" />
    }
</head>

<body>
    <div class="container-fluid">
        <div class="row vh-100">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse show">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="MisAvisos">
                                <i class="bi bi-chat-left-text"></i> Mis Avisos
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="InformacionTutor">
                                <i class="bi bi-person-circle"></i> Mi Perfil
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-controller="PanelTutor" asp-action="Cooperativa">
                                <i class="bi bi-cash-stack"></i> Cooperativa
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pt-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
