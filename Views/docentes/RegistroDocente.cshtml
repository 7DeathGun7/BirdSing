@model BirdSing.Models.ModelosViews.UsuarioDocenteViewModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Registrar Docente";
}

<link rel="stylesheet" href="~/css/RegistroDocentes.css" />


<h2>@ViewData["Title"]</h2>

<form asp-action="RegistroDocente" method="post" class="formulario-docente">
    <input type="hidden" asp-for="Usuario.IdRol" /> <!-- Rol oculto -->

    <h3>Datos del Usuario</h3>

    <div class="form-group">
        <label asp-for="Usuario.NombreUsuario"></label>
        <input asp-for="Usuario.NombreUsuario" class="@(ViewData.ModelState["Usuario.NombreUsuario"]?.Errors.Count > 0 ? "form-control is-invalid" : "form-control")" placeholder="Ej: jose123" />
        <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.ApellidoPaterno"></label>
        <input asp-for="Usuario.ApellidoPaterno" class="@(ViewData.ModelState["Usuario.ApellidoPaterno"]?.Errors.Count > 0 ? "form-control is-invalid" : "form-control")" placeholder="Ej: Gómez" />
        <span asp-validation-for="Usuario.ApellidoPaterno" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.ApellidoMaterno"></label>
        <input asp-for="Usuario.ApellidoMaterno" class="@(ViewData.ModelState["Usuario.ApellidoMaterno"]?.Errors.Count > 0 ? "form-control is-invalid" : "form-control")" placeholder="Ej: Ramírez" />
        <span asp-validation-for="Usuario.ApellidoMaterno" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.Email"></label>
        <input asp-for="Usuario.Email" class="@(ViewData.ModelState["Usuario.Email"]?.Errors.Count > 0 ? "form-control is-invalid" : "form-control")" placeholder="Ej: correo@dominio.com" />
        <span asp-validation-for="Usuario.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.Password" class="control-label">Contraseña</label>
        <div class="input-group">
            <input asp-for="Usuario.Password" type="password" class="form-control" id="passwordInput" />
            <button type="button" class="btn-outline-secondary" onclick="togglePassword()" title="Mostrar/Ocultar contraseña">👁️</button>
        </div>
        <span asp-validation-for="Usuario.Password" class="text-danger"></span>
    </div>

    <h3>Datos del Docente</h3>

    <div class="form-group">
        <label asp-for="Docente.MatriculaSEP"></label>
        <input asp-for="Docente.MatriculaSEP" class="@(ViewData.ModelState["Docente.MatriculaSEP"]?.Errors.Count > 0 ? "form-control is-invalid" : "form-control")" placeholder="Ej: SEP12345678" />
        <span asp-validation-for="Docente.MatriculaSEP" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit">Registrar</button>
        <a asp-action="ListaDocentes" class="btn-secondary">Cancelar</a>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</form>

<script>
    function togglePassword() {
        const input = document.getElementById("passwordInput");
        input.type = input.type === "password" ? "text" : "password";
    }
</script>
