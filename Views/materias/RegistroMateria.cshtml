@model BirdSing.Models.Materia
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Registrar Materia";
}

<link rel="stylesheet" href="~/css/RegistrarMateria.css" />

<h2>@ViewData["Title"]</h2>

<form asp-action="RegistroMateria" method="post" class="mt-4 needs-validation" novalidate>
    @Html.AntiForgeryToken()

    @* Sólo mostramos el summary si el ModelState NO es válido *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }

    <div class="mb-3">
        <label asp-for="IdGrado" class="form-label">Grado</label>
        <select asp-for="IdGrado" asp-items="ViewBag.Grados" class="form-select"></select>
        <span asp-validation-for="IdGrado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NombreMateria" class="form-label">Nombre de la Materia</label>
        <input asp-for="NombreMateria" class="form-control" />
        <span asp-validation-for="NombreMateria" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Registrar</button>
    <a asp-action="ListaMaterias" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
