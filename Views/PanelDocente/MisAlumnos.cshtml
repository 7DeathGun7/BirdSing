@model BirdSing.Models.ViewModels.MisAlumnosViewModel
@{
    Layout = "_LayoutDocente";
    ViewData["Title"] = "Mis Alumnos";
}

<h2>Mis Alumnos</h2>

<form asp-action="MisAlumnos" method="get" class="row g-3 mb-4">
    <!-- dropdowns... -->
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido P</th>
            <th>Apellido M</th>
            <th>Grado</th>
            <th>Grupo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Alumnos)
        {
            <tr>
                <td>@a.Usuario!.NombreUsuario</td>
                <td>@a.Usuario.ApellidoPaterno</td>
                <td>@a.Usuario.ApellidoMaterno</td>
                <td>@a.Grupo?.Grado?.Grados</td>
                <td>@a.Grupo?.Grupos</td>
            </tr>
        }
    </tbody>
</table>
