@model BirdSing.Models.ViewModels.MisAlumnosViewModel
@{
    Layout = "_LayoutDocente";
    ViewData["Title"] = "Mis Alumnos";
}

<h2>Mis Alumnos</h2>

<form asp-action="MisAlumnos" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label asp-for="GradoId" class="form-label">Grado</label>
        <select asp-for="GradoId" asp-items="Model.Grados" class="form-select"
                onchange="this.form.submit()">
            <option value="">-- Todos --</option>
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="GrupoId" class="form-label">Grupo</label>
        <select asp-for="GrupoId" asp-items="Model.Grupos" class="form-select"
                onchange="this.form.submit()">
            <option value="">-- Todos --</option>
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="MateriaId" class="form-label">Materia</label>
        <select asp-for="MateriaId" asp-items="Model.Materias" class="form-select"
                onchange="this.form.submit()">
            <option value="">-- Todas --</option>
        </select>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido P</th>
            <th>Apellido M</th>
            <th>Grado</th>
            <th>Grupo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Alumnos)
        {
            <tr>
                <td>@a.NombreAlumno</td>
                <td>@a.ApellidoPaterno</td>
                <td>@a.ApellidoMaterno</td>
                <td>@a.Grupo?.Grado?.Grados</td>
                <td>@a.Grupo?.Grupos</td>
            </tr>
        }
    </tbody>
</table>
